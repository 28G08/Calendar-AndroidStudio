<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Kalendernya"
        tools:targetApi="31">

        <activity
            android:name=".Markday"
            android:exported="false"
            android:theme="@style/Theme.Kalendernya" />
        <activity
            android:name=".Reminder"
            android:exported="false"
            android:theme="@style/Theme.Kalendernya"/>
        <activity
            android:name=".TambahReminder"
            android:exported="false"
            android:theme="@style/Theme.Kalendernya"/>
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Ini hanya untuk menerima panggilan dari AlarmManager -->
        <receiver android:name=".ReminderReceiver" android:exported="false"/>

        <!-- Ini untuk memastikan AlarmManager tetap berjalan setelah HP restart -->
        <receiver
            android:name=".BootReceiver"
            android:exported="true"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>

    </application>

    <!-- Izin yang dibutuhkan -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM"/>
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>

</manifest>
