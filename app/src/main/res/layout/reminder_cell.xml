<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@color/yellow">

    <!-- LinearLayout untuk teks Reminder -->
    <LinearLayout
        android:id="@+id/teks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/judulreminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Judul Reminder"/>

        <TextView
            android:id="@+id/tglreminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Tanggal Reminder"/>
    </LinearLayout>

    <!-- LinearLayout untuk tombol Edit dan Hapus -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/aktifrbtn">

        <Button
            android:id="@+id/editrbtn"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@color/white"
            android:text="Edit"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/hapusrbtn"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@color/white"
            android:text="Hapus"
            android:layout_margin="2dp"/>
    </LinearLayout>

    <!-- Tombol AKTIF -->
    <Button
        android:id="@+id/aktifrbtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="AKTIF"
        android:background="@color/greenL"
        android:layout_margin="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
